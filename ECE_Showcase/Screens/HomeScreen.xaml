<view:Screen x:Class="ECE_Showcase.Screens.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:s="http://schemas.microsoft.com/surface/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view="clr-namespace:ECE_Showcase"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Background="White" Margin="200 150">
        <Grid.Resources>
            <Style TargetType="s:SurfaceButton">
                <!--<Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Direction="270"
                                          ShadowDepth="1.0"/>
                    </Setter.Value>
                </Setter>-->
                <Setter Property="Margin" Value="5px" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Bottom" />
                <Setter Property="FontSize" Value="25" />
                <Setter Property="FontFamily" Value="Segoe UI Light" />
                <Setter Property="Foreground" Value="White" />

            </Style>
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="195px"/>
            <RowDefinition Height="195px"/>
            <RowDefinition Height="195px"/>
            <RowDefinition Height="195px"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="745px"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition Width="590" />
        </Grid.ColumnDefinitions>


        <s:SurfaceButton Name="Title"
            Margin="-205,-170,-203,0" Grid.ColumnSpan="4"
            Background ="White"
            Foreground ="#BCBCBC"
            FontSize = "115"
            VerticalContentAlignment ="Top" >
            electrical and computer engineering
        </s:SurfaceButton>

        <Image Source="/ECE_Showcase;component/Resources/info.png" Width="735px" Height="185px" Margin="5"></Image>
        <Image Source="/ECE_Showcase;component/Resources/HOD.png" Width="735px" Height="185px" Margin="5,6" Grid.Row="1"></Image>
        <Image Source="/ECE_Showcase;component/Resources/programmes.png" Width="735px" Height="185px" Margin="5" Grid.Row="2"></Image>
        <Image Source="/ECE_Showcase;component/Resources/contact.png" Width="735px" Height="185px" Margin="5" Grid.Row="3"></Image>
        <Image Source="/ECE_Showcase;component/Resources/rnd.png" Width="735px" Height="380px" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Grid.RowSpan="2"></Image>
        <s:SurfaceButton Name="InfoButton"
            Click="InfoButton_Click"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="1"></s:SurfaceButton>
        
        <s:SurfaceButton Name="HODButton"
            Click="HODButton_Click"
            Grid.Row="1"
            Grid.Column="0" 
            Grid.ColumnSpan="1"></s:SurfaceButton>
        
        <s:SurfaceButton Name="ProgrammesButton"
                         Grid.Row="2"
                         Grid.Column="0"
                         Grid.ColumnSpan="1"></s:SurfaceButton>
        <s:SurfaceButton Name="ContactButton"
                         Grid.Column="0"
                         Grid.Row="3"
                         Grid.ColumnSpan="1"
                         ></s:SurfaceButton>
        <s:SurfaceButton Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Click="SurfaceButton_Click"></s:SurfaceButton>
        <s:SurfaceButton Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="5" Background = "#633678">
            News Feed
        </s:SurfaceButton>

    </Grid>
</view:Screen>
